				<th>Email</th>
				<th>Country</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in myUser)
			{
				<tr>
					<td>@user.Id</td>
					<td>@user.FullName</td>
					<td>@user.Bvn</td>
					<td>@user.Gender</td>
					<td>@user.Address</td>
					<td>@user.PhoneNumber</td>
					<td>@user.Email</td>
					<td>@user.Country</td>
					<td>
						<a href="@Url.Action("UpdateDetails", new { id = user.Id })">
							<button>Edit</button>
						</a>
					</td>
					<td>
						<form asp-controller="Home" asp-action="DeleteUser" method="post">
							<input type="hidden" name="id" value="@user.Id" />
							<button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
						</form>
							
					</td>
					
				</tr>
			}
		</tbody>
